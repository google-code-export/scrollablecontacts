<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.boombuler.widgets.contacts"
      android:versionCode="7"
      android:versionName="0.0.7">
    <application android:icon="@drawable/identity" android:label="@string/app_name">
   		<provider
   		  android:name=".DataProvider"
            android:authorities="com.boombuler.widgets.contacts.provider"
            android:multiprocess="true"
            android:grantUriPermissions="true"
            />
		<!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".ContactWidget" android:label="@string/widget2x4">
			<intent-filter>
				<action   
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/contact_widget_provider" />
		</receiver>

		<receiver android:name=".ContactWidget22" android:label="@string/widget2x2">
			<intent-filter>
				<action   
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/contact_widget_provider2x2" />
		</receiver>
		
		<receiver android:name=".ContactWidget14" android:label="@string/widget1x4">
			<intent-filter>
				<action   
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/contact_widget_provider1x4" />
		</receiver>

		<receiver android:name=".ContactWidget12" android:label="@string/widget1x2">
			<intent-filter>
				<action   
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/contact_widget_provider1x2" />
		</receiver>
		
		<activity android:name=".ConfigurationActivity">
			<intent-filter>
				<action android:name="com.boombuler.widgets.contacts.PREFS" />
			</intent-filter>
		</activity>
		
    </application>
    <uses-sdk android:minSdkVersion="7" />


<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
</manifest> 