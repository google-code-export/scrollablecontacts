<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="@string/pref_grp_data">
	  <ListPreference 
	  		android:key="GroupId-%d"
	  		android:summary="@string/allcontacts"
	  		android:defaultValue="0"
	  		android:title="@string/select_contact_group" />
  		
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/behavior">
  	  <ListPreference
  	        android:key="onClick-%d"
  	        android:summary="@string/quickcontactbar"
  	        android:defaultValue="0"
  	        android:title="@string/onclick" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/pref_grp_layout">		
  	  <com.boombuler.widgets.contacts.DialogSeekBarPreference
  	  		android:key="CoulumnCount-%d"
  	  		android:title="@string/columncount"
  	  		android:defaultValue="1" 
  	  		android:summary="1"/>	
	  		
	  <ListPreference
	  		android:key="BGImage-%d"
	  		android:summary="@string/black"
	  		android:title="@string/background" />
	  <com.boombuler.widgets.contacts.DialogSeekBarPreference
	  		android:key="BackgroundAlpha-%d"
	  		android:title="@string/background_alpha"
	  		android:defaultValue="255"
	  		android:summary="255" 
	  		android:max="255"/>
	
	  <CheckBoxPreference android:key="ShowName-%d"
	  		android:title="@string/showName"
	  		android:defaultValue="true" />
	  <ListPreference
	  		android:key="NameKind-%d"
	  		android:summary="@string/displayname"
	  		android:title="@string/namekind"
	  		/>
	  		
	  <EditTextPreference android:key="DisplayLabel-%d"
	  		android:title="@string/displayLabel" 
	  		android:defaultValue=""/>
  </PreferenceCategory>
  		  	
  <PreferenceCategory android:title="@string/pref_grp_general">
  		<Preference android:title="@string/save" android:key="SAVE"/>
		<Preference android:title="@string/help" android:summary="@string/help_summary" android:key="HELP" />
		<Preference android:title="@string/about" android:key="ABOUT" />  		
  </PreferenceCategory>

</PreferenceScreen>
